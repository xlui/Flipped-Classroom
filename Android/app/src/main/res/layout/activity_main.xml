<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.flippedclassroom.android.activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c7c7c7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="14sp" />



            <Button
                android:id="@+id/ac_main_send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/bt_shape"
                android:text="发送" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#efefef"
            android:orientation="horizontal">

            <at.markushi.ui.CircleButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@drawable/main_icon_1"
                app:cb_pressedRingWidth="8dip" />

            <at.markushi.ui.CircleButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@drawable/main_icon_2"
                app:cb_pressedRingWidth="8dip" />

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/ac_main_bmb"
                app:bmb_buttonEnum="textInsideCircle"
                app:bmb_piecePlaceEnum="piecePlace_dot_9_1"
                app:bmb_buttonPlaceEnum="buttonPlace_sc_9_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <at.markushi.ui.CircleButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@drawable/main_icon_3"
                app:cb_pressedRingWidth="8dip" />

            <at.markushi.ui.CircleButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@drawable/main_icon_4"
                app:cb_pressedRingWidth="8dip" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
